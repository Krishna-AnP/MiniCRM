<style>
    .top-buttons {
        margin: 20px 0;
        display: flex;
        gap: 15px;
    }
    .top-buttons a {
        padding: 12px 25px;
        border-radius: 8px;
        color: white;
        font-weight: bold;
        text-decoration: none;
    }
    .btn-task { background: #007bff; }
    .btn-invoice { background: #28a745; }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid #ccc;
        padding: 8px;
    }
</style>

<a href="/clients">⬅ Back to Clients</a>

<div class="top-buttons">
    <a href="/clients/<%= client.id %>/tasks/new" class="btn-task">➕ New Task</a>
    <a href="/clients/<%= client.id %>/invoices/new" class="btn-invoice">➕ New Invoice</a>
</div>

<h1><%= client.name %></h1>
<p><strong>Email:</strong> <%= client.email %></p>
<p><strong>Status:</strong> <%= client.status %></p>

<h2>Tasks</h2>

<% if (tasks.length === 0) { %>
    <p>No tasks found.</p>
<% } else { %>
<table>
    <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Due Date</th>
    </tr>
    <% tasks.forEach(task => { %>
        <tr>
            <td><%= task.title %></td>
            <td><%= task.status %></td>
            <td><%= task.due_date %></td>
        </tr>
    <% }) %>
</table>
<% } %>

<h2>Invoices</h2>

<% if (invoices.length === 0) { %>
    <p>No invoices found.</p>
<% } else { %>
<table>
    <tr>
        <th>Amount</th>
        <th>Status</th>
    </tr>
    <% invoices.forEach(invoice => { %>
        <tr>
            <td>₹ <%= invoice.amount %></td>
            <td><%= invoice.status %></td>
        </tr>
    <% }) %>
</table>
<% } %>
