<!DOCTYPE html>
<html>
<head>
    <title>Clients</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f6f8;
            padding: 20px;
        }

        h1 {
            margin-bottom: 15px;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .btn {
            padding: 8px 14px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary {
            background: #007bff;
            color: white;
        }

        .btn-filter {
            background: #28a745;
            color: white;
        }

        select {
            padding: 6px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        th {
            background: #f0f0f0;
        }

        tr:hover {
            background: #f9f9f9;
        }

        a.view-link {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</head>
<body>

<h1>Clients</h1>

<div class="top-bar">
    <!-- Add Client -->
    <% if (user && user.role !== 'user') { %> 
        <a href="/clients/new">
            <button class="btn btn-primary">+ Add New Client</button>
        </a>
    <% } %>

    <!-- Filter -->
    <form method="GET" action="/clients">
        <select name="status">
            <option value="">All</option>
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
        </select>
        <button class="btn btn-filter" type="submit">Filter</button>
    </form>
</div>

<table>
    <tr>
        <th>Name</th>
        <th>Type</th>
        <th>City</th>
        <th>Status</th>
        <th>Action</th>
    </tr>

    <% clients.forEach(client => { %>
        <tr>
            <td><%= client.name %></td>
            <td><%= client.type || "-" %></td>
            <td><%= client.city || "-" %></td>
            <td><%= client.status %></td>
            <td>
                <% if (user && user.role !== 'user') { %>
                    <a class="view-link" href="/clients/<%= client.id %>">View</a>
                <% } else { %>
                    -
                <% } %>
            </td>
        </tr>
    <% }) %>

</table>

</body>
</html>
