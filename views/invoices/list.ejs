<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid #ccc;
        padding: 8px;
    }
</style>

<h1>Invoices</h1>

<% if (invoices.length === 0) { %>
    <p>No invoices found.</p>
<% } else { %>
<table>
    <tr>
        <th>ID</th>
        <th>Client</th>
        <th>Amount</th>
        <th>Status</th>
    </tr>

    <% invoices.forEach(invoice => { %>
        <tr>
            <td><%= invoice.id %></td>
            <td><%= invoice.client_name %></td>
            <td>â‚¹ <%= invoice.amount %></td>
            <td><%= invoice.status %></td>
        </tr>
    <% }) %>
</table>
<% } %>
