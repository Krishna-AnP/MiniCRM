<style>
    table {
        border-collapse: collapse;
        width: 80%;
    }
    th, td {
        border: 1px solid #ccc;
        padding: 8px;
    }
</style>

<h1>Tasks List</h1>

<table>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Status</th>
        <th>Client</th>
    </tr>

    <% tasks.forEach(task => { %>
        <tr>
            <td><%= task.id %></td>
            <td><%= task.title %></td>
            <td><%= task.status %></td>
            <td><%= task.client_name %></td>
        </tr>
    <% }) %>
</table>
